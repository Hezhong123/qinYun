/* pages/marke/marke.wxss */
page{
  background-color: #f6f6f6;
}

/* 导航栏 */
.top{
  background-color: #fff;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
  box-shadow: 1px 2px 10px #bfbfbf;
  padding-left: 5vw;
}
.topLi{
  display: flex
}
.liLeft{
  width: 3px;
  height: auto;
  border-radius: 10px;
  background-color: #e5e5e5;
  margin-right: 10px;
}

.liUi{
  display: flex;
  flex-direction: column;
  padding: 5px 0;
}
.liUi text{
  font-size: 13px;
  color: #535353;
  font-weight: 600;
  letter-spacing: 2px;
}

.topBtn{
  background-color: #01eb7c;
  text-align: center;
  display: inline-block;
  border-radius:  50px;
  padding: 2px 20px;
  color: #fff;
  font-size: 15px;
  margin: 10px 0 2px; 
}

.topPs{
  font-size: 12px;
  color: #c9c9c9;
  letter-spacing: 2px;
  padding-bottom: 6px;
}



/* 瀑布流 */
.makeBody{
  width: 94vw;
  margin-left: 3vw;
  column-count: 2;
  column-gap: 0;
  margin-top: 16px;
  margin-bottom: 20px;
}

.makeItem{
  break-inside: avoid; 
  box-sizing: border-box; 
  width: 45.5vw;
  height: 45vh;
  background-color: #fff;
  margin-bottom: 5px;
  border-radius: 5px;
  position: relative;
}

.makeImgs{
  width: 100%;
  height: 100%;
  box-shadow: 1px 2px 10px #bfbfbf;
  border-radius: 5px;
  position: absolute;
    left: 0;
    top: 0;
}

.maketitle{
  display: flex;
  margin-left: 10px;
  margin-bottom: 10px;
  margin-right: 5px;
}

.makehx{
  width: 2vw;
  height: auto;
  background-color: #01eb7c;
  border-radius: 5px;
}

.makeTex{
  display: flex;
  flex-direction: column;
  padding-left: 5px;
}
.mtet1{
  margin-top: 4px;
  font-size: 15px;
  color: #626262;
  font-weight: 700;
}
.mtet2{
  margin-top: -2px;
  font-size: 12px;
  color: #626262;
  font-weight: 700;
  letter-spacing: 3px;
  margin-bottom: 5px;
}

.xxs{
  position: absolute;
    top: 0;
    left: -1px;
  z-index: 100;  
}
.tops{
  margin-top: 20px;
  display: flex;
  background-color: #fff;
  align-items: center;
  height: 30px;
  width: 40vw;
  border-top-right-radius: 20px;
  border-bottom-right-radius: 20px;
  /* box-shadow: 1px 1px 3px #c9c9c9; */
}

.t1{
  color: #01eb7c;
  font-weight: 800;
  letter-spacing: 2px;
  font-size: 1rem;
  padding-left: 3px; 
}
.i1{
  margin-left: 3px;
  width: 23px;
  height: 23px;
  border-radius: 30px; 
  background-color: #626262;
}
.t2{
  font-size: 0.9rem;
  color: #535353;
  margin-left: 5px;
}