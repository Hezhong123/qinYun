<!--pages/goods/goods.wxml-->
<view>


<!-- 商品页脚 -->
<view class='goodsBody'>

  <!-- 地图 -->
  <view class='integral' wx:if="{{maps}}" >
    <view class='mapTop'>
      <text class='mapT1'>店铺名称</text>
      <image class='mpIco iocs ' bindtap='offMap' src='../../img/ico/bh1.png' ></image>
    </view>
    
    <map id="map" 
    longitude="{{longitude}}" 
    latitude="{{latitude}}" 
    scale="17" 
    controls="{{controls}}" 
    bindcontroltap="controltap" 
    markers="{{markers}}" bindmarkertap="markertap"
     polyline="{{polyline}}" 
     bindregionchange="regionchange" 
     show-location style="width: 100%; height: 260px;">
     </map>
  </view>

  <!-- 积分 -->
  <view class='integral' wx:if="{{ints && int}}" >
    <view>
      <image class='bhIco iocs ' bindtap='offInt' src='../../img/ico/bh1.png' ></image>
      <view class='intT1'>
        标题
      </view>
      <view class='intRom' >
        <view class='txBody' wx:for="{{[1,1,11,1,1,1,1,1,1,11,1,1,1,1,1,1,11,1,1,1,1,1,1,11,1,1,1,1]}}"> 
          <image class='intTx'></image>
          <!-- <text class='intTit'>1212</text> -->
        </view>
       
      </view>
     <view class='txNum' > 已有35位好朋友为我点赞</view>

      <view class='intBoy'>
        <view class='bnt1'>
          支持一下
        </view>
        
        <view  class='bnt2'>
          我也发起
        </view>

      </view>

    </view>
  </view>
  
  <!-- 页脚 -->
  <view class='goodsbar'>
    <view class='goodsleft brLeft'>
      <!-- 地图 -->
      <view class='goodsleft' bindtap='onMap' >
         <image class='iocs' src='../../img/ico/map.png'></image>
         <view class='goodst2'> 店 </view>
      </view>
      <!-- 客服 -->
      <view class='goodsleft'>
        <image class='iocs' bindcontact="onKf" src='../../img/ico/kf1.png'></image>
        <!-- <button size='0' bindcontact="onKf" >
          <image class='iocs' bindcontact="onKf" src='../../img/ico/kf1.png'></image>
        </button> -->
         <!-- <view class='goodst2'> 客服 </view> -->
      </view>
      <!-- 收藏 -->
      <view class='goodsleft' bindtap='onInt' >
         <image class='iocs iocsLeft' src='../../img/ico/sc.png'></image>
         <!-- <view class='goodst2'> 收藏 </view> -->
      </view>
      
      <!-- 积分 -->
      <view class='goodsleft' bindtap='onInt' wx:if="{{ints}}" >
        <image class='iocs iocsLeft' src='../../img/ico/goods.png'></image>
        <view class='goodst2'> 104 </view>
      </view>
    </view>

    <!-- 购买 -->
    <view class=' brRinght'>
      <view class='goodsRing' bindtap='onShop'>
          立即购买
      </view>
    </view>

    

    <view>

    </view>
  </view>

</view>
</view>

